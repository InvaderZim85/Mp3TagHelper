    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>audio-player.ico</ApplicationIcon>
    <Version>24.1.2.1208</Version>
    <FileVersion>24.1.2.1208</FileVersion>
    <AssemblyVersion>24.1.2.1208</AssemblyVersion>
  </PropertyGroup>
  <ItemGroup>
    <Compile Remove="AssemblyInfo.cs" />
  </ItemGroup>
  <ItemGroup>
    <Resource Include="AssemblyInfo.cs" />
    <Resource Include="audio-player.ico" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.2.2" />
    <PackageReference Include="MahApps.Metro" Version="2.4.10" />
    <PackageReference Include="Serilog.Sinks.File" Version="5.0.0" />
    <PackageReference Include="taglib-sharp-netstandard2.0" Version="2.1.0" />
